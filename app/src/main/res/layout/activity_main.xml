<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bmw2"
    tools:context="dhakre.uha.fr.trackspeed.MainActivity">


    <Button
        android:id="@+id/cars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Show Cars"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/enter"
        android:layout_alignStart="@+id/enter"
        android:layout_alignRight="@+id/enter"
        android:layout_alignEnd="@+id/enter" />

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:text="Check Current Speed"
        android:layout_below="@+id/cars"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
